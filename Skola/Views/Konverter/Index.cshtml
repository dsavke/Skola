
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<label>Vrijednost</label>
<input id="txtVrijednost" type="text" />

<br />

<label>Valute</label>
@Html.DropDownList("Valuta", ViewBag.Valute as List<SelectListItem>)

<br />

<input type="button" id="btnIzracunaj" value="IZRACUNAJ" />

<br />

<label>Konvertovan iznos: </label>
<div id="prikaz"></div>

<div class="modal" tabindex="-1" id="modalPrikaz" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Greska</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="tijeloModala">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script src="~/Scripts/App/konverter.js"></script>}